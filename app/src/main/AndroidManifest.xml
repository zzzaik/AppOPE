<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.zeno.appope">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AppOpeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InicioActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".ConfiguracoesActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".SelecionadoActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity
            android:name=".CatalogoActivity"
            android:theme="@style/AppTheme.Toolbar"/>
        <activity
            android:name=".PortfolioActivity"
            android:theme="@style/AppTheme.Toolbar"/>
        <activity
            android:name=".HorariosActivity"
            android:theme="@style/AppTheme.Toolbar"/>
        <activity
            android:name=".TattooActivity"
            android:theme="@style/AppTheme.Toolbar"/>

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".AdicionarActivity"></activity>
    </application>

</manifest>